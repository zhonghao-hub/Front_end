<%- include("./partials/header")%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title%> Blog</div>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">//trigger PUT request in app.js
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title%>">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image%>">
        </div>

        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= blog.body%></textarea>
        </div>

        <input class="ui violet big basic button" type="submit" >
    </form>
</div>
<%- include("./partials/footer")%>
